  
  
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <br><span class="h4 text-secondary">Search Results: </span><br><br>
        </div>


      </div>
      <div class="col text-center">
        <br>
        
        <table class="table table-dark col-6 float-left">
          <thead>
            <tr>
              <th class="text-white" scope="col">Inventories</th>
            </tr>
          </thead>

          <tbody>
            <% @inventory_results.each do |i| %>
              <tr>
                <td scope="row" class="bg-white"><a href="/inventories/<%=i.id%>" class="text-dark"><%= i.name %></a></td>
              </tr>
            <% end %>
            <% if !@inventory_results.any? %>
              <tr>
                <td scope="row" class="bg-warning text-white"><a>No results within Inventories Database</a></td>
              </tr>
            <%end%>

          </tbody>
        </table>

        <table class="table table-dark col-6 float-right">
          <thead>
            <tr>
              <th class="text-white" scope="col">Memos</th>
            </tr>
          </thead>

          <tbody>
            <% @memo_results.each do |i| %>
              <tr>
                <td scope="row" class="bg-white"><a href="/memos/<%=i.id%>" class="text-dark"><%= i.title %></a></td>
              </tr>
            <% end %>
            <% if !@memo_results.any? %>
              <tr>
                <td scope="row" class="bg-warning text-white"><a>No results within Memo Database</a></td>
              </tr>
            <%end%>
          </tbody>
        </table>
        

        <br><br>

      </div>
    </div>
  </div>