<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 pt-4 bg-brand-facebook rounded">
      <%= form_for(@inventory) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :location, class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.text_area :location, rows: 2, class: "form-control", placeholder: "Where can we find this?" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label "Additional Info", class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.text_area :info, rows: 3, class: "form-control rounded", placeholder: "Add any helpful tips" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label "Upload picture", class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.file_field :picture, class: "control-label mt-1", accept: 'image/jpeg,image/gif,image/png' %>
          </div>
        </div>

        <!-- services -->
        <div class="form-group row">
          <%= f.label :service, class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.collection_select(:service_ids, Service.all, :id, :name,
            { prompt: "press and hold ctrl to choose multiple services"}, { multiple: true, size: 10, class: "custom-select" }) %>
          </div>
        </div>

       

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-white btn-lg mt-3" %>
        </div>
      <% end %>
    </div>

    <div class="col-12 justify-content-center">
    <div class="mb-3 text-center">
        <br>
      <%= link_to '[ Cancel and return to inventorys listing ]', inventories_path, class: "text-info text-center" %>
    </div>
    </div>
  </div>
</div>